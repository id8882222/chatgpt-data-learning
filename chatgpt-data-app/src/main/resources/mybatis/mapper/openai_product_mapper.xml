<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxy.chatgptdatainfrastructure.dao.IOpenAIProductDao">
    <resultMap id="openAIProductMap" type= "com.hxy.chatgptdatainfrastructure.po.OpenAIProductPO">
        <id column="id" property="id"/>
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_desc" property="productDesc"/>
        <result column="quota" property="quota"/>
        <result column="price" property="price"/>
        <result column="sort" property="sort"/>
        <result column="is_enabled" property="isEnabled"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <select id="queryProductByProductId" resultType="com.hxy.chatgptdatainfrastructure.po.OpenAIProductPO" parameterType="java.lang.String" resultMap="openAIProductMap">
        select product_id, product_name, product_desc, quota, price, is_enabled
        from openai_product
        where product_id = #{productId}
    </select>


</mapper>